<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".Activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#019484"
            android:id="@+id/settingsToolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">
        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:id="@+id/settingsProfileImage"
            />

        <EditText
            android:id="@+id/settingsFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name..."
            android:padding="10dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            />
        <EditText
            android:id="@+id/settingsLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name..."
            android:padding="10dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            />
        <EditText
            android:id="@+id/settingsPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter phone number"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            />


        <EditText
            android:id="@+id/settingsEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Enter email here..."
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            />

        <Button
            android:id="@+id/settingsUpdateDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Details"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/settingsBackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple"
    tools:context=".Activities.AddHostelActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/purple"
        app:itemTextColor="@color/blue"
        app:itemIconTint="@color/blue"
        app:menu="@menu/hostelmanagermenu"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:id="@+id/tool_bar1"
            />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/hostelImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/addimage"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/hostelImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/addimage"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/hostelImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/addimage"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/hostelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel name"
                    android:drawableStart="@drawable/ic_house"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel location"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel type"
                    android:drawableStart="@drawable/ic_house"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelSharing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel sharing"
                    android:drawableStart="@drawable/ic_house"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel price"
                    android:drawableStart="@drawable/ic_house"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelAvailableSpaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter available spaces"
                    android:inputType="number"
                    android:drawableStart="@drawable/ic_people"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hostelRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter hostel Rules"
                    android:drawableStart="@drawable/ic_people"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/setLocationBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:text="Set Location"/>


            </LinearLayout>



            <!--<androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>-->

        </LinearLayout>





</androidx.drawerlayout.widget.DrawerLayout>